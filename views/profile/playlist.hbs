<div class="content-playlist">
  <div class="header-background">
    <div class="header">
      <div class="user-info">
        <img src="{{user.userPhoto}}" alt="">
        <h4>{{user.userJson.display_name}}</h4>
      </div>
      <div class="title">
        <h1>Generated Playlist</h1>
        <h5>A personally curated playlist to relax your BPM</h5>
      </div>
      <div class="BPM-info">
        <h5>Your input BPM :</h5>
        <h5>{{heartrateData.BPM}}</h5>
        <h5>Input method :</h5>
        <h5>{{heartrateData.method}}</h5>
        <h5>Recommended BPM :</h5>
        <h5>{{heartrateData.targetBPM}}</h5>
      </div>
    </div>
  </div>
  <div class="playlist-recommendations">
    <h3>Our recommendations:</h3>
    {{#each playlistArr}}
    <div class="trackBlock row">
      <p class="trackArtist">{{ this.artists.0.name }}</p>
      <h5 class="trackTitle"> {{this.name}} </h5>
      <audio controls src="{{this.preview_url}}" class="trackControls">
        Your browser does not support the
        <code>audio</code> element.
      </audio>
      <a href="{{this.external_urls.spotify}}" class="spotifyURL">
        <img src="/images/spotify-rainbow.jpg" alt="Rainbow Spotify logo linked to whole song" class="spotify">
      </a>
    </div>
    {{/each}}
  </div>
</div>